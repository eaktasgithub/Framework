@using Framework.DTO.Products;
@model List<ProductListDto>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="container-fluid">
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a href="@Url.Action("Add","Product")">
            <h6 class="m-0 font-weight-bold text-primary">Yeni Ürün Ekle</h6>
        </a>
    </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ürün İsmi</th>
                            <th>Kategori</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>İşlem</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                            <th>Age</th>
                            <th>Start date</th>
                            <th>Salary</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.CategoryName</td>
                            <td>@product.UnitPrice</td>
                            <td>@product.UnitsInStock</td>
                            <td>
                                <a href="@Url.Action("Update", "Product", new {id = product.ProductID})">
                                    <button type="button" class="btn btn-primary btn-sm">Update</button>
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Delete", "Product", new {id = product.ProductID})">
                                    <button type="button" class="btn btn-danger btn-sm">Delete</button>
                                </a>
                            </td>
                        </tr>
                    }
                   
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

